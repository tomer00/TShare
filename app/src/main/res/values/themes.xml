<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TomerShare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/co_main</item>
        <item name="colorPrimaryVariant">@color/co_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="edit_text_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/fore</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:textColorHint">@color/fore</item>
        <item name="hintTextColor">@color/fore</item>
    </style>

    <style name="Splash" parent="Theme.TomerShare">
        <item name="android:windowBackground">@drawable/gra1</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="Dialog">
        <item name="android:windowEnterAnimation">@anim/enter_d</item>
        <item name="android:windowExitAnimation">@anim/exit_d</item>
    </style>
</resources>